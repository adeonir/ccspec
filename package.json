{
  "name": "ccspec",
  "version": "0.2.2",
  "description": "Simplified Spec-Driven Development for Claude Code",
  "author": "Adeonir Kohl <me@adeonir.dev> (https://adeonir.dev/)",
  "main": "index.js",
  "keywords": [
    "cli",
    "spec",
    "specification",
    "claude",
    "claude-code",
    "development",
    "workflow"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/adeonir/ccspec.git"
  },
  "homepage": "https://github.com/adeonir/ccspec#readme",
  "bugs": {
    "url": "https://github.com/adeonir/ccspec/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/"
  ],
  "type": "commonjs",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "lint": "biome check --write src/",
    "check": "tsc --noEmit && biome ci src/",
    "prerelease": "pnpm check && pnpm build",
    "release": "np --no-tests"
  },
  "bin": {
    "ccspec": "./dist/index.js"
  },
  "dependencies": {
    "boxen": "8.0.1",
    "chalk": "5.6.2",
    "commander": "14.0.2",
    "fs-extra": "11.3.2",
    "inquirer": "13.0.1",
    "ora": "9.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/fs-extra": "11.0.4",
    "@types/inquirer": "9.0.9",
    "@types/node": "24.10.1",
    "lefthook": "2.0.4",
    "np": "10.2.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  }
}
